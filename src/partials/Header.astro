---
import menu from "@/data/menu.json";
// REMOVED: import { IoSearch } from "react-icons/io5";

const main = menu.main;
---

<header class="header-container">
  <div class="header-wrapper">
    
    <!-- LOGO + NAME - Centered vertically -->
    <div class="logo-wrapper">
      <a href="/" class="logo-link">
        <div class="logo-image-container">
          <img
            src="/images/logo1.jpg"
            alt="AutoInsureGuides - Expert Auto Insurance Guides"
            class="logo-image"
          />
          <div class="logo-badge">
            <svg class="badge-icon" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="logo-text">
          <span class="logo-title">
            AutoInsureGuides
          </span>
          <span class="logo-subtitle">
            Expert Insurance Guides
          </span>
        </div>
      </a>
    </div>

    <!-- Desktop Navigation - Updated labels -->
    <nav class="desktop-nav">
      <div class="nav-container">
        {main.map((item, index) => (
          <div class="nav-item">
            <button class="nav-dropdown-button">
              {index === 0 ? "Insurance" : 
               index === 1 ? "Coverage" : 
               index === 2 ? "Claims" : 
               index === 3 ? "States" : 
               index === 4 ? "Reviews" : 
               "More"}
              <svg class="dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>

            <ul class="dropdown-menu">
              <li>
                <a href={item.url || "#"} class="dropdown-header">
                  <div class="dropdown-header-icon">
                    {index === 0 ? '🚗' : 
                     index === 1 ? '🛡️' : 
                     index === 2 ? '📋' : 
                     index === 3 ? '🗺️' : 
                     index === 4 ? '⭐' : '🔧'}
                  </div>
                  <div>
                    <div class="dropdown-header-title">
                      {item.name === "State Insurance Guides" ? "Insurance Guides" : 
                       item.name === "Accident & Injury Help" ? "Accident & Injury" : 
                       item.name}
                    </div>
                    <div class="dropdown-header-subtitle">
                      {index === 0 ? "Auto Insurance Information" : 
                       index === 1 ? "Coverage Types & Options" : 
                       index === 2 ? "Claims Process & Help" : 
                       index === 3 ? "State-Specific Guides" : 
                       index === 4 ? "Company Ratings & Reviews" : 
                       "Additional Resources"}
                    </div>
                  </div>
                </a>
              </li>
              
              {item.dropdown ? (
                item.dropdown.map(sub => (
                  <li>
                    <a href={sub.url} class="dropdown-item">
                      <div class="dropdown-icon-container">
                        <svg class="dropdown-item-icon" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                      <div>
                        <div class="dropdown-item-title">
                          {sub.name}
                        </div>
                        {sub.description && (
                          <div class="dropdown-item-description">{sub.description}</div>
                        )}
                      </div>
                    </a>
                  </li>
                ))
              ) : (
                <li>
                  <a href={item.url} class="dropdown-item">
                    <div class="dropdown-icon-container">
                      <svg class="dropdown-item-icon" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div>
                      <div class="dropdown-item-title">
                        View All {item.name === "State Insurance Guides" ? "Insurance Guides" : 
                                 item.name === "Accident & Injury Help" ? "Accident & Injury" : 
                                 item.name}
                      </div>
                      <div class="dropdown-item-description">Browse all content in this section</div>
                    </div>
                  </a>
                </li>
              )}
              
              {/* "Get Quotes" special button in its dropdown */}
              {item.name === "Get Quotes" && (
                <li class="dropdown-quotes-container">
                  <a href={item.url} class="dropdown-quotes-button">
                    <svg class="quotes-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                      <div class="quotes-title">Get Free Quotes</div>
                      <div class="quotes-subtitle">Compare rates from top providers</div>
                    </div>
                  </a>
                </li>
              )}
            </ul>
          </div>
        ))}
      </div>
    </nav>

    <!-- Right Side Actions - Fixed Calculate button -->
    <div class="header-actions">
      <!-- Calculator Icon - Fixed size -->
      <a href="/tools/calculator" class="calculator-button" title="Insurance Calculator">
        <svg class="calculator-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        <span class="calculator-text">Calculate</span>
      </a>

      <!-- Search -->
      <a href="/search" class="search-button" title="Search">
        <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </a>

      <!-- Mobile Hamburger -->
      <div class="mobile-menu" x-data="{ open: false }">
        <button @click="open = !open" class="mobile-menu-button">
          <svg class="hamburger-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path :class="{ 'hidden': open, 'block': !open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path :class="{ 'hidden': !open, 'block': open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile Menu -->
        <div x-show="open" @click.away="open = false" x-transition class="mobile-menu-dropdown">
          <div class="mobile-menu-content">
            <div class="mobile-actions">
              <a href="/tools/calculator" class="mobile-calculator">
                <div class="mobile-icon">💰</div>
                <div class="mobile-action-text">Savings Calculator</div>
              </a>
              <a href="/get-quotes" class="mobile-quotes">
                <div class="mobile-icon">🚗</div>
                <div class="mobile-action-text">Get Quotes</div>
              </a>
            </div>

            <div class="mobile-nav-links">
              {main.flatMap(item => item.dropdown ? [{ name: item.name, url: null, isHeader: true }, ...item.dropdown] : [item]).map((item, index) => (
                item.isHeader ? (
                  <div class="mobile-nav-header">
                    {item.name === "State Insurance Guides" ? "Insurance Guides" : 
                     item.name === "Accident & Injury Help" ? "Accident & Injury" : 
                     item.name}
                  </div>
                ) : (
                  <a href={item.url} class={item.name === "Get Quotes" ? "mobile-nav-link-quotes" : "mobile-nav-link"} @click="open = false">
                    <div class="mobile-nav-icon-container">
                      <div class="mobile-nav-icon">
                        {index === 0 ? '🚗' : 
                         index === 1 ? '💰' : 
                         index === 2 ? '📋' : 
                         index === 3 ? '🗺️' : 
                         index === 4 ? '⭐' : '📊'}
                      </div>
                    </div>
                    <div class="mobile-nav-text">
                      <div class="mobile-nav-title">
                        {item.name === "State Insurance Guides" ? "Insurance Guides" : 
                         item.name === "Accident & Injury Help" ? "Accident & Injury" : 
                         item.name}
                      </div>
                      {item.description && (
                        <div class="mobile-nav-description">{item.description}</div>
                      )}
                    </div>
                    <svg class="mobile-nav-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </a>
                )
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Trust Badge Banner -->
<div class="trust-banner">
  <div class="trust-banner-content">
    <div class="trust-item">
      <svg class="trust-icon" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>Expert Insurance Guides</span>
    </div>
    <div class="trust-item hidden-md">
      <svg class="trust-icon" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>Money-Saving Tips</span>
    </div>
    <div class="trust-item">
      <svg class="trust-icon" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>Unbiased Information</span>
    </div>
  </div>
</div>

<style>
  /* RESET ANY CONFLICTING STYLES */
  .header-container * {
    box-sizing: border-box !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .header-container {
    position: relative !important;
    width: 100% !important;
    padding: 1.25rem 0 !important;
    border-bottom: 1px solid #e5e7eb !important;
    background-color: white !important;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05) !important;
    min-height: 76px !important;
  }
  
  .header-wrapper {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    width: 100% !important;
    max-width: 1280px !important;
    margin: 0 auto !important;
    padding: 0 1rem !important;
    position: relative !important;
    height: 100% !important;
  }
  
  /* LOGO - CENTERED VERTICALLY */
  .logo-wrapper {
    position: absolute !important;
    left: 1rem !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    z-index: 100 !important;
    flex-shrink: 0 !important;
  }
  
  .logo-link {
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
    text-decoration: none !important;
  }
  
  .logo-image-container {
    position: relative !important;
    width: 52px !important;
    height: 52px !important;
  }
  
  .logo-image {
    width: 100% !important;
    height: 100% !important;
    border-radius: 0.75rem !important;
    object-fit: cover !important;
    border: 2px solid #dbeafe !important;
  }
  
  .logo-badge {
    position: absolute !important;
    bottom: -4px !important;
    right: -4px !important;
    width: 20px !important;
    height: 20px !important;
    background-color: #2563eb !important;
    border-radius: 50% !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }
  
  .badge-icon {
    width: 12px !important;
    height: 12px !important;
    color: white !important;
  }
  
  .logo-text {
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important; /* Center text vertically */
    height: 52px !important; /* Match image height */
  }
  
  .logo-title {
    font-size: 1.125rem !important;
    font-weight: 800 !important;
    color: #1e3a8a !important;
    white-space: nowrap !important;
    line-height: 1.2 !important;
    letter-spacing: -0.025em !important;
  }
  
  .logo-subtitle {
    font-size: 0.813rem !important;
    color: #2563eb !important;
    font-weight: 600 !important;
    margin-top: 2px !important; /* Reduced margin */
    line-height: 1.2 !important;
  }
  
  /* NAVIGATION - SHORT DROPDOWN LABELS */
  .desktop-nav {
    position: absolute !important;
    left: 50% !important;
    top: 50% !important;
    transform: translate(-50%, -50%) !important;
    z-index: 50 !important;
  }
  
  .nav-container {
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    background-color: rgba(219, 234, 254, 0.3) !important;
    border-radius: 9999px !important;
    padding: 0.5rem 0.75rem !important;
    backdrop-filter: blur(8px) !important;
  }
  
  .nav-item {
    position: relative !important;
  }
  
  .nav-dropdown-button {
    font-size: 0.938rem !important;
    font-weight: 600 !important;
    color: #1e3a8a !important;
    transition: all 0.2s !important;
    white-space: nowrap !important;
    padding: 0.5rem 1rem !important;
    border-radius: 9999px !important;
    border: none !important;
    background: none !important;
    cursor: pointer !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.375rem !important;
    min-height: 40px !important;
  }
  
  .nav-dropdown-button:hover {
    color: #1d4ed8 !important;
    background-color: rgba(255, 255, 255, 0.9) !important;
  }
  
  .dropdown-icon {
    width: 1rem !important;
    height: 1rem !important;
  }
  
  /* DROPDOWN MENU - LARGER WITH HEADER */
  .dropdown-menu {
    position: absolute !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    margin-top: 0.75rem !important;
    width: 280px !important;
    background-color: white !important;
    border: 1px solid #bfdbfe !important;
    border-radius: 0.875rem !important;
    box-shadow: 0 20px 40px -16px rgba(0, 0, 0, 0.2) !important;
    opacity: 0 !important;
    visibility: hidden !important;
    transition: all 0.3s !important;
    z-index: 50 !important;
    overflow: hidden !important;
  }
  
  .nav-item:hover .dropdown-menu {
    opacity: 1 !important;
    visibility: visible !important;
  }
  
  /* Dropdown Header */
  .dropdown-header {
    display: block !important;
    padding: 1rem !important;
    background: linear-gradient(to right, #eff6ff, #dbeafe) !important;
    border-bottom: 1px solid #bfdbfe !important;
    text-decoration: none !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
  }
  
  .dropdown-header-icon {
    font-size: 1.5rem !important;
    width: 2.5rem !important;
    height: 2.5rem !important;
    background-color: white !important;
    border-radius: 0.75rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }
  
  .dropdown-header-title {
    font-weight: 700 !important;
    color: #1e3a8a !important;
    font-size: 1rem !important;
  }
  
  .dropdown-header-subtitle {
    font-size: 0.75rem !important;
    color: #4b5563 !important;
    margin-top: 0.125rem !important;
  }
  
  /* Dropdown Items */
  .dropdown-item {
    display: block !important;
    padding: 0.875rem 1rem !important;
    font-size: 0.875rem !important;
    color: #374151 !important;
    text-decoration: none !important;
    transition: background-color 0.2s !important;
    border-bottom: 1px solid #f3f4f6 !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
  }
  
  .dropdown-item:last-child {
    border-bottom: none !important;
  }
  
  .dropdown-item:hover {
    background-color: #eff6ff !important;
    color: #1d4ed8 !important;
  }
  
  .dropdown-icon-container {
    width: 2rem !important;
    height: 2rem !important;
    background-color: #dbeafe !important;
    border-radius: 0.5rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex-shrink: 0 !important;
  }
  
  .dropdown-item-icon {
    width: 1rem !important;
    height: 1rem !important;
    color: #2563eb !important;
  }
  
  .dropdown-item-title {
    font-weight: 600 !important;
  }
  
  .dropdown-item-description {
    font-size: 0.75rem !important;
    color: #6b7280 !important;
    margin-top: 0.125rem !important;
  }
  
  /* Special Quotes Button in Dropdown */
  .dropdown-quotes-container {
    padding: 1rem !important;
    background-color: #f8fafc !important;
    border-top: 1px solid #e5e7eb !important;
  }
  
  .dropdown-quotes-button {
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
    padding: 0.875rem !important;
    background: linear-gradient(to right, #2563eb, #1e40af) !important;
    color: white !important;
    border-radius: 0.75rem !important;
    text-decoration: none !important;
    transition: all 0.2s !important;
  }
  
  .dropdown-quotes-button:hover {
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3) !important;
    transform: translateY(-2px) !important;
  }
  
  .quotes-icon {
    width: 1.5rem !important;
    height: 1.5rem !important;
  }
  
  .quotes-title {
    font-weight: 700 !important;
    font-size: 0.938rem !important;
  }
  
  .quotes-subtitle {
    font-size: 0.75rem !important;
    opacity: 0.9 !important;
    margin-top: 0.125rem !important;
  }
  
  /* RIGHT ACTIONS - FIXED CALCULATE BUTTON */
  .header-actions {
    position: absolute !important;
    right: 1rem !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
    flex-shrink: 0 !important;
    z-index: 100 !important;
  }
  
  .calculator-button {
    display: none !important;
  }
  
  @media (min-width: 768px) {
    .calculator-button {
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
      gap: 0.5rem !important;
      padding: 0.625rem 1.25rem !important;
      background: linear-gradient(to right, #22c55e, #059669) !important;
      color: white !important;
      border-radius: 0.75rem !important;
      text-decoration: none !important;
      transition: all 0.2s !important;
      font-weight: 700 !important;
      min-height: 44px !important;
      min-width: 120px !important;
      white-space: nowrap !important;
    }
    
    .calculator-button:hover {
      box-shadow: 0 6px 20px rgba(34, 197, 94, 0.3) !important;
      transform: translateY(-2px) !important;
    }
    
    .calculator-icon {
      width: 1.25rem !important;
      height: 1.25rem !important;
      flex-shrink: 0 !important;
    }
    
    .calculator-text {
      font-size: 0.875rem !important;
      font-weight: 700 !important;
      flex-shrink: 0 !important;
    }
  }
  
  .search-button {
    padding: 0.5rem !important;
    transition: background-color 0.2s !important;
    border-radius: 0.5rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    width: 40px !important;
    height: 40px !important;
    flex-shrink: 0 !important;
  }
  
  .search-button:hover {
    background-color: #eff6ff !important;
  }
  
  .search-icon {
    width: 1.25rem !important;
    height: 1.25rem !important;
    color: #1d4ed8 !important;
    flex-shrink: 0 !important;
  }
  
  /* MOBILE MENU */
  .mobile-menu {
    display: block !important;
  }
  
  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }
  
  .mobile-menu-button {
    padding: 0.625rem !important;
    color: #1e3a8a !important;
    z-index: 50 !important;
    background: none !important;
    border: none !important;
    cursor: pointer !important;
    width: 40px !important;
    height: 40px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex-shrink: 0 !important;
  }
  
  .hamburger-icon {
    width: 1.5rem !important;
    height: 1.5rem !important;
  }
  
  .mobile-menu-dropdown {
    position: fixed !important;
    inset: 0 !important;
    top: 5rem !important;
    background-color: white !important;
    z-index: 40 !important;
    overflow-y: auto !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
  }
  
  .mobile-menu-content {
    padding: 2rem 1.5rem !important;
  }
  
  .mobile-actions {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 1rem !important;
    margin-bottom: 2.5rem !important;
  }
  
  .mobile-calculator, .mobile-quotes {
    background: linear-gradient(to right, #22c55e, #059669) !important;
    color: white !important;
    border-radius: 0.875rem !important;
    padding: 1.25rem !important;
    text-align: center !important;
    text-decoration: none !important;
    transition: box-shadow 0.2s !important;
  }
  
  .mobile-quotes {
    background: linear-gradient(to right, #2563eb, #1e40af) !important;
  }
  
  .mobile-calculator:hover, .mobile-quotes:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }
  
  .mobile-icon {
    font-size: 1.75rem !important;
    margin-bottom: 0.625rem !important;
  }
  
  .mobile-action-text {
    font-size: 0.938rem !important;
    font-weight: 700 !important;
  }
  
  .mobile-nav-links {
    display: flex !important;
    flex-direction: column !important;
    gap: 0.5rem !important;
  }
  
  .mobile-nav-header {
    font-size: 0.875rem !important;
    font-weight: 700 !important;
    color: #1e3a8a !important;
    text-transform: uppercase !important;
