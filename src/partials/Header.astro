---
import menu from "@/config/menu.json";
import { IoSearch } from "react-icons/io5";

const main = menu.main;
---

<header class="py-4 md:py-6 border-b border-gray-200 bg-white shadow-sm">
  <div class="mx-auto px-4 md:px-6 lg:px-8 xl:px-12 max-w-7xl flex items-center justify-between gap-4 md:gap-6">
    
    <!-- LOGO + NAME -->
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center space-x-2 md:space-x-3 group">
        <div class="relative">
          <img
            src="/images/logo.jpg"
            alt="AutoInsureGuides - Expert Auto Insurance Advice"
            class="w-10 h-10 md:w-12 md:h-12 rounded-xl object-cover border-2 border-blue-100 group-hover:border-blue-300 transition-all"
          />
          <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-blue-600 rounded-full flex items-center justify-center">
            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="flex flex-col">
          <span class="text-xl md:text-2xl font-bold text-blue-900 whitespace-nowrap">
            AutoInsureGuides
          </span>
          <span class="text-xs text-blue-600 font-medium -mt-1">
            Expert Insurance Advice
          </span>
        </div>
      </a>
    </div>

    <!-- Desktop Navigation - Professional Insurance Style -->
    <nav class="hidden md:flex items-center justify-center flex-1 max-w-2xl mx-4">
      <div class="flex items-center space-x-1 lg:space-x-2 bg-blue-50/50 rounded-full px-2 py-1">
        {main.map(item => (
          <div class="relative group">
            {item.dropdown ? (
              <button class="text-sm font-semibold text-blue-900 hover:text-blue-700 transition whitespace-nowrap flex items-center gap-1 px-3 py-2 hover:bg-white rounded-full">
                {item.name}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            ) : (
              <a
                href={item.url}
                class={`
                  text-sm font-semibold transition whitespace-nowrap px-3 py-2 rounded-full
                  ${item.name === "Get Quotes" 
                    ? "bg-gradient-to-r from-blue-600 to-blue-800 text-white shadow-md hover:shadow-lg hover:-translate-y-0.5" 
                    : "text-blue-900 hover:text-blue-700 hover:bg-white"
                  }
                `}
              >
                {item.name}
              </a>
            )}

            {item.dropdown && (
              <ul class="absolute left-1/2 -translate-x-1/2 mt-2 w-56 bg-white border border-blue-200 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 pt-2 overflow-hidden">
                {item.dropdown.map(sub => (
                  <li>
                    <a
                      href={sub.url}
                      class="block px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition border-b border-blue-100 last:border-b-0"
                    >
                      <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                          <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                        </div>
                        <div>
                          <div class="font-medium">{sub.name}</div>
                          {sub.description && (
                            <div class="text-xs text-gray-500 mt-0.5">{sub.description}</div>
                          )}
                        </div>
                      </div>
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </nav>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-3 md:gap-4 lg:gap-5 flex-shrink-0">
      <!-- Calculator Icon -->
      <a href="/tools/calculator" class="hidden md:flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all group" title="Insurance Calculator">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        <span class="text-sm font-bold">Calculate</span>
      </a>

      <!-- Search -->
      <a href="/search" class="p-2 hover:bg-blue-50 rounded-lg transition" title="Search">
        <IoSearch class="w-5 h-5 text-blue-700" />
      </a>

      <!-- Phone (Insurance Industry Standard) -->
      <a href="tel:+1-800-555-1234" class="hidden lg:flex items-center gap-2 px-4 py-2 bg-blue-50 text-blue-700 rounded-xl hover:bg-blue-100 transition group" title="Call for Assistance">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <div class="flex flex-col">
          <span class="text-xs font-bold">Call Now</span>
          <span class="text-xs">Free Advice</span>
        </div>
      </a>

      <!-- Mobile Hamburger -->
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="p-2 text-blue-900 z-50">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path :class="{ 'hidden': open, 'block': !open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path :class="{ 'hidden': !open, 'block': open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile Menu - Professional Insurance Style -->
        <div x-show="open" @click.away="open = false" x-transition class="fixed inset-0 top-16 bg-white z-40 overflow-y-auto shadow-xl">
          <div class="px-6 py-8">
            {/* Insurance Quick Actions */}
            <div class="grid grid-cols-2 gap-3 mb-8">
              <a href="/tools/calculator" class="bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl p-4 text-center hover:shadow-lg transition">
                <div class="text-2xl mb-2">üí∞</div>
                <div class="font-bold text-sm">Savings Calculator</div>
              </a>
              <a href="/get-quotes" class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-xl p-4 text-center hover:shadow-lg transition">
                <div class="text-2xl mb-2">üöó</div>
                <div class="font-bold text-sm">Get Quotes</div>
              </a>
            </div>

            {/* Navigation Links */}
            <div class="space-y-1">
              {main.flatMap(item => item.dropdown ? [{ name: item.name, url: null, isHeader: true }, ...item.dropdown] : [item]).map((item, index) => (
                item.isHeader ? (
                  <div class="text-sm font-bold text-blue-900 uppercase pt-6 pb-2 border-t border-blue-100 first:border-t-0 first:pt-0">
                    {item.name}
                  </div>
                ) : (
                  <a
                    href={item.url}
                    class={`
                      flex items-center justify-between p-4 rounded-xl transition
                      ${item.name === "Get Quotes" 
                        ? "bg-gradient-to-r from-blue-600 to-blue-800 text-white" 
                        : "text-gray-700 hover:bg-blue-50 hover:text-blue-700"
                      }
                    `}
                    @click="open = false"
                  >
                    <div class="flex items-center gap-3">
                      <div class={`w-10 h-10 rounded-lg flex items-center justify-center ${item.name === "Get Quotes" ? 'bg-white/20' : 'bg-blue-100'}`}>
                        {index === 0 ? 'üöó' : 
                         index === 1 ? 'üí∞' : 
                         index === 2 ? 'üìã' : 
                         index === 3 ? 'üó∫Ô∏è' : 
                         index === 4 ? 'üè¢' : 'üìö'}
                      </div>
                      <div>
                        <div class="font-bold">{item.name}</div>
                        {item.description && (
                          <div class="text-xs opacity-75 mt-0.5">{item.description}</div>
                        )}
                      </div>
                    </div>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </a>
                )
              ))}
            </div>

            {/* Contact & Support */}
            <div class="mt-8 pt-6 border-t border-blue-100">
              <div class="space-y-4">
                <a href="tel:+1-800-555-1234" class="flex items-center gap-3 p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition">
                  <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-blue-900">Call for Assistance</div>
                    <div class="text-sm text-blue-700">1-800-555-1234</div>
                  </div>
                </a>

                <a href="/contact" class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition">
                  <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-gray-900">Contact Support</div>
                    <div class="text-sm text-gray-600">Email our insurance experts</div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Trust Badge Banner -->
<div class="bg-gradient-to-r from-blue-900 to-blue-800 text-white py-2 px-4">
  <div class="max-w-7xl mx-auto flex flex-wrap items-center justify-center gap-4 md:gap-8 text-sm">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>Unbiased Insurance Advice</span>
    </div>
    <div class="hidden md:flex items-center gap-2">
      <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>No Commission Fees</span>
    </div>
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <span>Helped 15,000+ Save Money</span>
    </div>
  </div>
</div>

<script>
  // Simple theme toggle removed since we're using light mode only for professional insurance site
  // Trust badge animation
  document.addEventListener('DOMContentLoaded', function() {
    const trustBadges = document.querySelectorAll('.bg-gradient-to-r');
    
    trustBadges.forEach(badge => {
      badge.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-1px)';
        this.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.1)';
      });
      
      badge.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = 'none';
      });
    });
  });
</script>

<style>
  /* Professional insurance animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.3s ease-out;
  }
  
  /* Smooth transitions */
  * {
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Professional shadow on hover */
  .hover-lift:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
</style>