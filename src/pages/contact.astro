---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const entry = (await getEntry(
  "contact",
  "-index"
)) as CollectionEntry<"contact">;
const { contact_form_action } = config.params;
const { address, email, phone } = config.contactinfo;
const { title, description, meta_title, image } = entry.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="py-20 bg-gradient-to-b from-blue-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-600">
              Contact AutoInsureGuides
            </span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Have questions about auto insurance? Need help understanding coverage options?
            Our team is here to help.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          {/* Contact Information */}
          <div class="bg-white rounded-2xl shadow-lg p-8 border border-blue-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Contact Information</h2>
            
            <div class="space-y-8">
              {/* Address */}
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Address</h3>
                  <p class="text-gray-600 leading-relaxed">
                    123 Insurance Plaza, Suite 500<br/>
                    Financial District<br/>
                    New York, NY 10005
                  </p>
                </div>
              </div>

              {/* Email */}
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
                  <a href="mailto:contact@autoinsureguides.com" class="text-blue-700 hover:text-blue-900 font-medium">
                    contact@autoinsureguides.com
                  </a>
                  <p class="text-gray-500 text-sm mt-1">Typically respond within 24 hours</p>
                </div>
              </div>

              {/* Phone */}
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Phone</h3>
                  <a href="tel:+1-800-555-1234" class="text-blue-700 hover:text-blue-900 font-medium text-xl">
                    1-800-555-1234
                  </a>
                  <p class="text-gray-500 text-sm mt-1">Monday-Friday, 9AM-6PM EST</p>
                </div>
              </div>
            </div>

            {/* Trust Badges */}
            <div class="mt-12 pt-8 border-t border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Why Trust Us?</h3>
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-gray-700">Unbiased insurance advice</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-gray-700">No commission from insurance companies</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-gray-700">Helped 15,000+ visitors save money</span>
                </div>
              </div>
            </div>
          </div>

          {/* Contact Form */}
          <div class="bg-white rounded-2xl shadow-lg p-8 border border-blue-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Send Us a Message</h2>
            
            <form class="space-y-6" method="POST" action={contact_form_action}>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-900 mb-2">
                    Full Name <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                    placeholder="John Smith"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-900 mb-2">
                    Email Address <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-900 mb-2">
                  Subject
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                  placeholder="What is this regarding?"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-900 mb-2">
                  Message <span class="text-red-600">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                  placeholder="How can we help you with your auto insurance questions?"
                ></textarea>
              </div>

              <div>
                <button
                  type="submit"
                  class="w-full py-4 bg-gradient-to-r from-blue-600 to-blue-800 text-white font-bold rounded-xl hover:shadow-xl hover:shadow-blue-500/30 transition-all hover:-translate-y-1"
                >
                  Send Message
                </button>
              </div>

              <p class="text-gray-500 text-sm text-center">
                We typically respond to inquiries within 24 hours during business days.
              </p>
            </form>

            {/* Quick Help Section */}
            <div class="mt-12 pt-8 border-t border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-6">Quick Help Topics</h3>
              <div class="space-y-4">
                <a href="/faq" class="block p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition group">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="text-blue-600">‚ùì</div>
                      <span class="font-medium text-gray-900">Frequently Asked Questions</span>
                    </div>
                    <svg class="w-5 h-5 text-blue-600 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </div>
                </a>
                
                <a href="/insurance-calculator" class="block p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition group">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="text-blue-600">üí∞</div>
                      <span class="font-medium text-gray-900">Insurance Savings Calculator</span>
                    </div>
                    <svg class="w-5 h-5 text-blue-600 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </div>
                </a>
                
                <a href="/state-requirements" class="block p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition group">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="text-blue-600">üó∫Ô∏è</div>
                      <span class="font-medium text-gray-900">State Insurance Requirements</span>
                    </div>
                    <svg class="w-5 h-5 text-blue-600 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>

        {/* AdSense Placement */}
        <div class="mt-16">
          <div class="bg-gray-100 p-6 rounded-2xl border border-gray-300">
            <div class="text-center text-gray-500 text-sm mb-4">Advertisement</div>
            <!-- AdSense slot for contact page -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
                 data-ad-slot="XXXXXXXXXX"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
            <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* Smooth transitions for form elements */
    input, textarea, select {
      transition: all 0.2s ease;
    }
    
    input:focus, textarea:focus, select:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
  </style>
</Base>