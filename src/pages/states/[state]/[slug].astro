---
// src/pages/states/[state]/[slug].astro - FIXED VERSION with Dollar Sign Fix
import { getCollection } from 'astro:content';
import Base from "@/layouts/Base.astro";

// Add this import for markdown rendering
import MarkdownIt from 'markdown-it';

// Initialize markdown parser
const md = new MarkdownIt({
  html: true,
  breaks: true,
  linkify: true,
  typographer: true
});

// Generate all 51 state pages
export async function getStaticPaths() {
  const states = await getCollection('states');
  return states.map(state => ({
    params: { 
      state: state.data.state,
      slug: "car-insurance"
    },
    props: { stateData: state }
  }));
}

const { stateData } = Astro.props;

// Render markdown to HTML
const renderedContent = md.render(stateData.body);

// FIX: Format premium to ensure dollar sign shows correctly
function formatPremium(premium) {
  // If it starts with comma, replace with dollar sign
  if (premium && premium.startsWith(',')) {
    return '$' + premium.substring(1);
  }
  // If it doesn't start with $, add it
  if (premium && !premium.startsWith('$')) {
    return '$' + premium;
  }
  return premium || '$800/year'; // Default fallback
}

// FIX: Also fix premium in markdown content
const fixedRenderedContent = renderedContent.replace(/,800\/year/g, '$800/year');
---

<Base 
  title={`${stateData.data.stateName} Car Insurance Guide | AutoInsureGuides`}
  description={`Complete ${stateData.data.stateName} car insurance requirements: ${stateData.data.minimumCoverage}. Average premium: ${formatPremium(stateData.data.averagePremium)}. State-specific laws and discounts.`}
>
  
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      
      <!-- State Header -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-6">
          <div class="text-4xl">üó∫Ô∏è</div>
          <div>
            <h1 class="text-4xl font-bold text-gray-900">{stateData.data.stateName} Car Insurance</h1>
            <div class="text-xl text-gray-600 mt-2">Complete 2024 State Guide</div>
          </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
          <div class="bg-blue-50 p-6 rounded-xl border border-blue-100">
            <div class="text-sm text-blue-700 mb-2">Average Premium</div>
            <div class="text-3xl font-bold text-blue-900">
              {formatPremium(stateData.data.averagePremium)}
            </div>
            <div class="text-xs text-blue-600 mt-2">Annual Estimate</div>
          </div>
          <div class="bg-green-50 p-6 rounded-xl border border-green-100">
            <div class="text-sm text-green-700 mb-2">Minimum Coverage</div>
            <div class="text-3xl font-bold text-green-900">{stateData.data.minimumCoverage}</div>
            <div class="text-xs text-green-600 mt-2">Required by Law</div>
          </div>
          <div class="bg-purple-50 p-6 rounded-xl border border-purple-100">
            <div class="text-sm text-purple-700 mb-2">State Code</div>
            <div class="text-3xl font-bold text-purple-900">{stateData.data.stateAbbreviation}</div>
            <div class="text-xs text-purple-600 mt-2">{stateData.data.stateName}</div>
          </div>
        </div>
      </div>
      
      <!-- Markdown Content - FIXED VERSION -->
      <article class="prose prose-lg max-w-none bg-gray-50 p-8 rounded-2xl border border-gray-200">
        <div class="markdown-content" set:html={fixedRenderedContent} />
      </article>
      
      <!-- CTA Section -->
      <div class="mt-16 p-8 bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl border border-blue-200">
        <h3 class="text-2xl font-bold mb-4 text-gray-900">Get {stateData.data.stateName} Insurance Quotes</h3>
        <p class="text-gray-700 mb-6">Compare rates from top providers in your state.</p>
        <a 
          href={`/tools/quote-comparison?state=${stateData.data.stateAbbreviation}`}
          class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-800 text-white font-bold rounded-xl hover:shadow-lg"
        >
          üöó Get Free {stateData.data.stateAbbreviation} Quotes
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </a>
      </div>
      
      <!-- Navigation -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <a href="/states" class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to All States
        </a>
      </div>
    </div>
  </section>

  <style>
    /* Markdown styling */
    .markdown-content {
      font-size: 1.125rem;
      line-height: 1.8;
      color: #374151;
    }
    
    .markdown-content h1,
    .markdown-content h2 {
      font-size: 2rem;
      font-weight: 700;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #dbeafe;
      color: #1e40af;
    }
    
    .markdown-content h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      color: #374151;
    }
    
    .markdown-content h4 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
